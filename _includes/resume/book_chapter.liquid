<div class="list-groups">
  {% assign chapters = data.book_chapters | sort: 'year' | reverse %}
  {% for chapter in chapters %}
    <div class="list-group col-md-12">
      <table class="table-cv list-group-table">
        <tbody>

          <!-- Chapter title -->
          <tr>
            <td class="list-group-category-icon">
              <i class="fa-solid fa-book"></i>
            </td>
            <td colspan="4" class="list-group-category">
              <strong>{{ chapter.book_title }}</strong>
            </td>
          </tr>

          <!-- Chapter details -->
          <tr>
            <td></td>
            <td class="list-group-name" colspan="2">
              <b>Authors:</b> {{ chapter.authors | join: ", " }}
            </td>
            <td class="list-group-name">
              <b>Publisher:</b> {{ chapter.publisher }}
            </td>
            <td class="list-group-name">
              <b>Year:</b> {{ chapter.year }}
            </td>
          </tr>

        </tbody>
      </table>
    </div>
  {% endfor %}
</div>
