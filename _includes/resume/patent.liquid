<div class="list-groups">
  {% assign patents = data[1] | sort: 'date' | reverse %}
  {% for p in patents %}
    <div class="list-group col-md-12">
      <table class="table-cv list-group-table">
        <tbody>

          <!-- Patent title -->
          <tr>
            <td class="list-group-category-icon">
              <i class="fa-solid fa-file-signature"></i>
            </td>
            <td colspan="4" class="list-group-category">
              <strong>{{ p.title }}</strong>
            </td>
          </tr>

          <!-- Patent details -->
          <tr>
            <td></td>
            <td class="list-group-name">
              <b>Patent No:</b> {{ p.number }}
            </td>
            <td class="list-group-name">
              <b>Country:</b> {{ p.country }}
            </td>
            <td class="list-group-name">
              <b>Status:</b> {{ p.status }}
            </td>
            <td class="list-group-name">
              {{ p.date | date: "%B %Y" }}
            </td>
          </tr>

          <!-- Applicants -->
          <tr>
            <td></td>
            <td colspan="4" class="list-group-name">
              <b>Name of Applicants:</b>
              {{ p.applicants | join: ", " }}
            </td>
          </tr>

        </tbody>
      </table>
    </div>
  {% endfor %}
</div>
